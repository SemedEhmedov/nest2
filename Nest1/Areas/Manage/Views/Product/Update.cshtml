@model Product

<div class="container">




    <form method="post">
        <div class="form-group">

            <label asp-for="Name">Name</label>
            <input class="form-control" asp-for="Name" placeholder="Enter Name">
            <span asp-validation-for="Name" style="color:red"></span>
        </div>
        <div class="form-group">

            <label asp-for="Description">Description</label>
            <input class="form-control" asp-for="Description" placeholder="Enter Description">
            <span asp-validation-for="Description" style="color:red"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price">Price</label>
            <textarea class="form-control" asp-for="Price" rows="3"></textarea>
            <span asp-validation-for="Price" style="color:red"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price">Price</label>
            <textarea class="form-control" asp-for="Price" rows="3"></textarea>
            <span asp-validation-for="Price" style="color:red"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId">Category select</label>
            <select class="form-control" asp-for="CategoryId" asp-items=@(new SelectList(ViewBag.Categories,"Id","Name"))>
                <option>Select Category</option>


            </select>
        </div>



        <div class="form-group">
            <label asp-for="File">Image File</label>
            <input class="form-control" asp-for="File">
            <span asp-validation-for="File" style="color:red"></span>
        </div>



        <button type="submit" class="btn btn-primary">Submit</button>
    </form>






</div>